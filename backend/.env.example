# Environment Variables
# Copy this file to .env and fill in your values

# Path to the Google Service Account JSON key file
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# Google Spreadsheet ID (from the Sheet URL)
SPREADSHEET_ID=your-spreadsheet-id

# Google Doc ID (from the Doc URL)
DOC_ID=your-doc-id

# Server port
PORT=3001

# JWT secret (use a long random string)
JWT_SECRET=your-secret-key-change-me

# JWT token expiry (default: 24h)
JWT_EXPIRES_IN=24h

# Allowed email domains for registration (comma-separated, empty = all allowed)
ALLOWED_EMAIL_DOMAINS=gmail.com

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://www.dinbendon.net,https://dinbendon.net
